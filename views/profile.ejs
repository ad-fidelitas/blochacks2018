<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= data.profileData.username%>'s profile</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">          
    <link rel="stylesheet" type="text/css" media="screen" href="/css/profile.css" />
</head>
<body>
        <div class="image-display">
                <div></div>
              </div>
              
              <header>
                <div class="back-button"><a href="/"><i class="fas fa-home fa-3x"></a></i></div>
                
                <div class="profile"><img class="profile-pic" src="<%= data.profileData.proImgPath %>"/>
                  <div class="profile-sub">
                    <div class="name"><%= data.profileData.username%></div>
                    <% if (currentUser != undefined && currentUser.username === data.profileData.username){ %>                    
                    <a href="/profile/post/edit">Edit Profile</a>
                    <a href="/profile/post/new">Upload Story</a>
                    <%} else {%>
                        <a href="#">Donate!</a>
                        <a href="#">Support!</a>
                    <%}%>
                  </div>
                </div>
              </header>
              <div class="main-container">
                <div class="sidebar-left">
                  <div class="intro">
                    <div class="left-header">
                      <div class="fa fa-globe"></div>
                      <p>Story</p>
                    </div>
                    <p><%= data.profileData.description %></p>
                    <% if (currentUser != undefined && currentUser.username === data.profileData.username){ %>
                    <span>UPDATE INFO</span>
                    <%}%>
                  </div>
                </div>
                <main>
                  <div class="links">
                    <ul>
                      <li>Timeline</li>
                      <li>About</li>
                      <li>Donors</li>
                      <li>Photos</li>
                      <li>More</li>
                    </ul>
                  </div>
                  <%if (currentUser == undefined || !(data.profileData.donors.includes(currentUser)) && (currentUser.username !== data.profileData.username)) {%>
                    <h1>Content Not Available. Please Donate if you would like to view this profile!</h1>
                    <%} else {%>
                  <% for (var i = data.posts.length-1; i >= 0; i--) { %>
                  <div class="post">
                    <div class="post-head">
                      <img class="profile-pic" src="<%= data.profileData.proImgPath %>"/>
                      <div class="info"><span><a href="#"><%= data.profileData.username %></a></span></div>
                    </div>
                    <div class="post-content">
                      <p><%= data.posts[i].content %></p>
                      <% if (data.posts[i].imgPath != undefined) { %> 
                        <img src="..<%= data.posts[i].imgPath %>"/>
                      <% } %>
                    </div>
                    <div class="post-foot">
                      <!-- <div class="social">
                        <div class="fa fa-thumbs-up"></div><span>Like</span>
                        <div class="fa fa-comment"></div><span>Comment</span>
                        <div class="fa fa-share"></div><span>Share</span>
                      </div> -->
                      <div class="comment">
                        <input type="text" placeholder="Write a comment..."/>
                      </div>
                    </div>
                  </div>
                  <% } %>
                  
                  <%}%>
                </main>
